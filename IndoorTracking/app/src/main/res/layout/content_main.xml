<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hr.foi.indoortracking.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:weightSum="1">

        <TextView
            android:id="@+id/textViewNazivC"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp"
            android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
            android:text="Kategorija:"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_weight="0.08"
            android:textSize="20sp"
            android:textColor="?android:attr/colorAccent"
            android:textStyle="normal|bold"
            android:layout_width="100dp" />

        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
            android:text="kategorija lokacije"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:paddingLeft="0dp"
            android:layout_marginLeft="0dp"
            android:textSize="20sp"
            android:textColor="?attr/colorAccent"
            android:textStyle="normal|italic" />



    </LinearLayout>



       <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:weightSum="1">

           <TextView
               android:id="@+id/textViewNaziv"
               android:layout_height="wrap_content"
               android:layout_marginLeft="1dp"
               android:layout_marginRight="5dp"
               android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
               android:text="Naziv lokacije:"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="40dp"
               android:layout_weight="0.08"
               android:textSize="24sp"
               android:textColor="?android:attr/colorAccent"
               android:textStyle="normal|bold"
               android:layout_width="160dp" />

           <TextView
            android:id="@+id/txtCurrentLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
            android:text="lokacija"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="0.001dp"
            android:textSize="24sp"
            android:textColor="?attr/colorAccent"
               android:textStyle="normal|italic" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:weightSum="1">


    </LinearLayout>

    <TextView
        android:id="@+id/txtCurrentLocationOpis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
        android:text="opis"
        android:layout_marginLeft="0.005dp"
        android:textSize="24sp"
        android:textColor="?attr/colorAccent"
        android:layout_weight="0.24"
        android:layout_alignTop="@+id/textViewOpis"
        android:layout_toEndOf="@+id/textViewOpis"
        android:layout_marginStart="42dp" />

    <Button
        android:text="Detalji"
        android:id="@+id/buttonDetails"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/background_light"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewOpis"
        android:layout_marginBottom="19dp" />

    <TextView
        android:id="@+id/textViewOpis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="5dp"
        android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
        android:text="Kratki opis:"
        android:layout_weight="0.08"
        android:textSize="24sp"
        android:textColor="?android:attr/colorAccent"
        android:layout_marginStart="2dp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/imageView"
        android:textAlignment="viewStart" />

    <ImageView
        app:srcCompat="@mipmap/plan"
        android:id="@+id/imageView"
        android:layout_height="300dp"

        android:layout_marginStart="64dp"
        android:layout_width="180dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignStart="@+id/buttonDetails"
        android:layout_marginTop="50dp"/>


</RelativeLayout>
